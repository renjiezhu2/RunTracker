<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.dartmouth.cs.MyRuns.ManualInputActivity"
    android:orientation="vertical">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/manual_input_list_view"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.14"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manual_save_button_string"
            android:id="@+id/manual_save_button"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onManualSaveClick"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manual_cancel_button_string"
            android:id="@+id/manual_cancel_button"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onManualCancelClick"/>
    </LinearLayout>
</LinearLayout>
